# Copy this file to .env and fill in your values
# .env is gitignored and should never be committed

# Node environment
NODE_ENV=development

# Backend
PORT=4000
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=relay
DB_USER=postgres
DB_PASSWORD=postgres

# Email
EMAIL_PROVIDER=console          # console | resend | ses
RESEND_API_KEY=                  # Required when EMAIL_PROVIDER=resend
AWS_SES_REGION=us-east-1         # Required when EMAIL_PROVIDER=ses
EMAIL_FROM_ADDRESS=noreply@relayfunds.org
EMAIL_FROM_NAME=Relay

# Staff Admin
STAFF_ADMIN_EMAILS=              # Comma-separated list of staff admin emails
