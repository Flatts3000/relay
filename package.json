{
  "name": "relay",
  "version": "0.1.0",
  "private": true,
  "description": "Coordination platform connecting mutual aid groups with fund hubs",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm run dev --workspaces --if-present",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm run build --workspaces --if-present",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "test": "npm run test --workspaces --if-present",
    "test:frontend": "npm run test --workspace=frontend",
    "test:backend": "npm run test --workspace=backend",
    "lint": "npm run lint --workspaces --if-present",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Flatts3000/relay.git"
  },
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/Flatts3000/relay/issues"
  },
  "homepage": "https://github.com/Flatts3000/relay#readme",
  "overrides": {
    "esbuild": ">=0.25.0",
    "vite": {
      "esbuild": ">=0.25.0"
    },
    "@esbuild-kit/core-utils": {
      "esbuild": ">=0.25.0"
    }
  }
}
