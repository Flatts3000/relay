# Production environment configuration
# Copy to .env.prod and fill in real values
# NEVER commit .env.prod to version control

# Node
NODE_ENV=production
PORT=4000

# Database (credentials for the postgres container)
DB_USER=relay
DB_PASSWORD=CHANGE_ME_TO_A_STRONG_PASSWORD
DB_NAME=relay

# Application URLs
CORS_ORIGIN=https://relayfunds.org
FRONTEND_URL=https://relayfunds.org

# Email (Resend free tier: 100/day, 3,000/month)
EMAIL_PROVIDER=resend
RESEND_API_KEY=re_xxxxx
EMAIL_FROM_ADDRESS=noreply@relayfunds.org
EMAIL_FROM_NAME=Relay

# Staff Admin (comma-separated emails)
STAFF_ADMIN_EMAILS=flatts.scg@gmail.com

# AWS (for database backups to S3)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
S3_BACKUP_BUCKET=relay-backups-prod
